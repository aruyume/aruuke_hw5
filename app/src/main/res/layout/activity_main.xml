<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#9DDD53">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_arrow_back_24"
        android:layout_marginTop="8dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_et"
        android:hint="@string/username"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:gravity="start"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="@string/email"
        android:background="#4FFFFFFF"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:gravity="start"
        android:layout_marginVertical="6dp"
        app:layout_constraintTop_toBottomOf="@+id/et1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_et2"
        android:hint="@string/password"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:gravity="start"
        android:layout_marginVertical="6dp"
        app:layout_constraintTop_toBottomOf="@+id/et2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/but"
        android:layout_width="350dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/et3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/next"
        android:textSize="27sp"
        android:textColor="@color/black"
        android:background="@drawable/bg_button"
        android:drawableEnd="@drawable/ic_arrow_circle_right_24"
        android:paddingEnd="8dp"/>

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/ic_sova"
        app:layout_constraintBottom_toTopOf="@+id/trivia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/trivia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/trivia"
        android:textColor="@color/white"
        android:textSize="46sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="100dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>